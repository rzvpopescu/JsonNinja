{
  "manifest_version": 3,
  "name": "JsonNinja",
  "version": "1.0.0",
  "description": "Parse and format JSON with syntax highlighting",
  "action": {
    "default_popup": "../index.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png",
    "512": "icons/icon-512.png"
  },
  "permissions": ["storage"]
}
